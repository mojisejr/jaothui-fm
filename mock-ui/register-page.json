{
  "page_name": "สร้างบัญชี",
  "description": "หน้าสำหรับสร้างบัญชีผู้ใช้ใหม่",
  "layout": {
    "type": "mobile_register",
    "background_color": "#ffffff",
    "container": {
      "max_width": "400px",
      "padding": "40px 20px",
      "margin": "0 auto",
      "text_align": "center"
    }
  },
  "components": [
    {
      "type": "logo_section",
      "logo": {
        "image": "jaothui_logo.png",
        "width": "120px",
        "height": "120px",
        "margin_bottom": "30px"
      },
      "brand_name": {
        "text": "JAOTHUI",
        "font_size": "32px",
        "font_weight": "bold",
        "color": "#f39c12",
        "margin_bottom": "40px"
      }
    },
    {
      "type": "register_title",
      "text": "สร้างบัญชี",
      "font_size": "24px",
      "font_weight": "bold",
      "color": "#333333",
      "margin_bottom": "40px"
    },
    {
      "type": "register_form",
      "fields": [
        {
          "type": "input",
          "placeholder": "ชื่อ",
          "background": "#f5f5f5",
          "border": "1px solid #e0e0e0",
          "border_radius": "10px",
          "padding": "15px 20px",
          "margin_bottom": "20px",
          "width": "100%"
        },
        {
          "type": "input",
          "placeholder": "นามสกุล",
          "background": "#f5f5f5",
          "border": "1px solid #e0e0e0",
          "border_radius": "10px",
          "padding": "15px 20px",
          "margin_bottom": "20px",
          "width": "100%"
        },
        {
          "type": "input",
          "placeholder": "เบอร์โทรศัพท์",
          "background": "#f5f5f5",
          "border": "1px solid #e0e0e0",
          "border_radius": "10px",
          "padding": "15px 20px",
          "margin_bottom": "20px",
          "width": "100%"
        },
        {
          "type": "input",
          "placeholder": "รหัสผ่าน 6 หลัก",
          "input_type": "password",
          "background": "#f5f5f5",
          "border": "1px solid #e0e0e0",
          "border_radius": "10px",
          "padding": "15px 20px",
          "margin_bottom": "20px",
          "width": "100%"
        },
        {
          "type": "input",
          "placeholder": "ยืนยันรหัสผ่าน 6 หลัก",
          "input_type": "password",
          "background": "#f5f5f5",
          "border": "1px solid #e0e0e0",
          "border_radius": "10px",
          "padding": "15px 20px",
          "margin_bottom": "40px",
          "width": "100%"
        }
      ]
    },
    {
      "type": "register_button",
      "text": "สร้างบัญชี",
      "background": "#f39c12",
      "color": "#ffffff",
      "border_radius": "25px",
      "padding": "15px 50px",
      "font_size": "16px",
      "font_weight": "bold",
      "width": "80%",
      "margin": "0 auto 30px auto"
    },
    {
      "type": "login_link",
      "text": "มีบัญชี? เข้าสู่ระบบ",
      "color": "#666666",
      "font_size": "14px",
      "margin_top": "20px"
    }
  ]
}