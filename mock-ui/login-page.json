{
  "page_name": "หน้าเข้าสู่ระบบ",
  "description": "หน้าล็อกอินเข้าสู่ระบบ JAOTHUI",
  "layout": {
    "type": "mobile_login",
    "background_color": "#ffffff",
    "container": {
      "max_width": "400px",
      "padding": "40px 20px",
      "margin": "0 auto",
      "text_align": "center"
    }
  },
  "components": [
    {
      "type": "logo_section",
      "logo": {
        "image": "jaothui_logo.png",
        "width": "120px",
        "height": "120px",
        "margin_bottom": "30px"
      },
      "brand_name": {
        "text": "JAOTHUI",
        "font_size": "32px",
        "font_weight": "bold",
        "color": "#f39c12",
        "margin_bottom": "40px"
      }
    },
    {
      "type": "login_title",
      "text": "ยินดีต้อนรับ",
      "subtitle": "โปรดเข้าสู่ระบบ",
      "title_style": {
        "font_size": "24px",
        "font_weight": "bold",
        "color": "#333333",
        "margin_bottom": "10px"
      },
      "subtitle_style": {
        "font_size": "16px",
        "color": "#666666",
        "margin_bottom": "40px"
      }
    },
    {
      "type": "login_form",
      "fields": [
        {
          "type": "input",
          "placeholder": "หมายเลขโครงการ",
          "background": "#f5f5f5",
          "border": "1px solid #e0e0e0",
          "border_radius": "10px",
          "padding": "15px 20px",
          "margin_bottom": "20px",
          "width": "100%"
        },
        {
          "type": "input",
          "placeholder": "รหัสผ่าน",
          "input_type": "password",
          "background": "#f5f5f5",
          "border": "1px solid #e0e0e0",
          "border_radius": "10px",
          "padding": "15px 20px",
          "margin_bottom": "20px",
          "width": "100%"
        }
      ]
    },
    {
      "type": "forgot_password",
      "text": "ลืมรหัสผ่าน?",
      "color": "#666666",
      "font_size": "14px",
      "margin_bottom": "40px",
      "text_decoration": "underline"
    },
    {
      "type": "login_button",
      "text": "เข้าสู่ระบบ",
      "background": "#f39c12",
      "color": "#ffffff",
      "border_radius": "25px",
      "padding": "15px 50px",
      "font_size": "16px",
      "font_weight": "bold",
      "width": "80%",
      "margin": "0 auto 30px auto"
    },
    {
      "type": "register_link",
      "text": "ยังไม่มีบัญชี? สร้างบัญชี",
      "color": "#666666",
      "font_size": "14px",
      "margin_top": "20px"
    }
  ]
}